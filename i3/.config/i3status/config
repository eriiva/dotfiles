general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "volume master"
order += "wireless wlp2s0"
order += "ethernet enp0s31f6"
order += "battery 0"
order += "disk /"
order += "load"
order += "tztime local"

disk "/" {
        format = "/ %free"
}

